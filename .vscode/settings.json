{
    "CRS.ObjectNameSuffix": " SAS",
    "CRS.ObjectNamePrefix": "",
    "CRS.AlSubFolderName": "src",
    "CRS.OnSaveAlFileAction": "Reorganize",
    "CRS.ExtensionObjectNamePattern": "<Prefix><BaseNameShort><Suffix>",
    "CRS.FileNamePatternExtensions": "<ObjectNameShort>.<ObjectTypeShortPascalCase>.al",
    "CRS.FileNamePattern": "<ObjectNameShort>.<ObjectTypeShortPascalCase>.al",
    "CRS.FileNamePatternPageCustomizations": "<ObjectNameShort>.<ObjectTypeShortPascalCase>.al",
    "files.defaultLanguage": "al",
    "al.enableCodeAnalysis": true,
    "al.codeAnalyzers": [
        "${CodeCop}",
        "${AppSourceCop}"
    ],
    "al.ruleSetPath": "./.vscode/ruleSet.json",
    "al.enableCodeActions": false,
    "editor.codeActionsOnSave": {
        "source.fixAll.al": "always"
    },
    "alOutline.codeActionsOnSave": [
        "SortProperties",
        "SortVariables",
        "SortTableFields"        
    ]
}